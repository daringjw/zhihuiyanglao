<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/for_help_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@mipmap/for_help">

        <ImageView
            android:id="@+id/ivForHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:src="@mipmap/btn_for_help"/>

    </RelativeLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivOldPeoplePosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/old_people_position"/>

        <ImageView
            android:id="@+id/ivMyPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_position"/>

    </LinearLayout>


    <ImageView
        android:layout_gravity="center"
        android:id="@+id/ivReturnVisitRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/return_visit_record"/>


</LinearLayout>